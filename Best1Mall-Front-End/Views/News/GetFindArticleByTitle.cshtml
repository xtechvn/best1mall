@using Best1Mall_Front_End.Models.News;
@using Best1Mall_Front_End.Utilities.Lib;
@using Best1Mall_Front_End.Utilities;
@model List<ArticleRelationModel>

@if (Model != null && Model.Any())
{
    <div class="space-y-4">
        @foreach (var item in Model)
        {
            string link = Html.GetStaticUrlNews(item.Title, item.Id);
            <article class="flex flex-col md:flex-row gap-4 border-b pb-4">
                <div class="w-full md:w-[180px] flex-shrink-0">
                    <a href="@link">
                        <img src="@(item.Image)" alt="@item.Title" class="w-full h-full object-cover rounded-lg shadow" />
                    </a>
                </div>
                <div class="flex-1">
                    <div class="text-sm text-gray-500 mb-1 flex items-center gap-2">
                        <i class="icon icon-time"></i>
                        <span>@item.publish_date.ToString("dd/MM/yyyy")</span>
                        <span>|</span>
                        <span>@item.category_name</span>
                    </div>
                    <h2 class="text-lg font-semibold text-sky-900 hover:underline">
                        <a href="@link">@item.Title</a>
                    </h2>
                    <p class="text-gray-600 text-sm mt-2">@item.Lead</p>
                    <a href="@link" class="inline-block mt-2 text-color-base text-sm hover:underline">Đọc tiếp</a>
                </div>
            </article>
        }
    </div>
}
else
{
    <div class="text-center py-10">
        
        <h2 class="text-xl font-semibold">Không tìm thấy kết quả</h2>
        <p class="text-gray-500">Chúng tôi không tìm thấy thông tin mà bạn cần, vui lòng thử lại</p>
    </div>
}
