@using HuloToys_Front_End.Models.News;
@using HuloToys_Front_End.Utilities.Lib;
@using HuloToys_Front_End.Utilities;
@model List<ArticleResponse>
@if (Model != null)
{
    foreach (var item in Model)
    {
        string link = @Html.GetStaticUrlNews(item.title, item.id);
        <div class="item-news">
            <div class="box-news">
                <div class="thumb-art">
                    <div class="thumb thumb-news">
                        <a href="@link"><img src="@item.image_169" alt=""> </a>
                    </div>
                </div>
                <div class="right-content">
                    <div class="flex-cat">

                        <span class="time">
                            <i class="icon icon-time"></i>
                            @item.publish_date.ToString("dd/MM/yyyy") |   @item.category_name
                        </span>
                    </div>
                    <h2 class="title-news">
                        <a href="@link">
                            @item.title
                        </a>
                    </h2>
                    <p class="description">
                        @item.lead
                    </p>
                    <a href="@link">Đọc tiếp</a>
                </div>
            </div>
        </div>
    }
}

