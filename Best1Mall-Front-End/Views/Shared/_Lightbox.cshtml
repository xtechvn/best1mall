<!-- Popup Thành công - Tailwind Version -->
<div id="thanhcong" class="fixed inset-0 bg-white/30 backdrop-blur-sm flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg shadow-lg px-6 py-5 max-w-md w-full text-center popup">
        <div class="content">
            <img src="/assets/images/check.svg" alt="Success" class="w-14 h-14 mx-auto mb-3">
            <h2 class="text-green-600 font-bold text-xl">THÀNH CÔNG</h2>
            <p class="text-gray-700 mt-1 lightbox-description">Thêm sản phẩm vào giỏ hàng thành công</p>
        </div>
    </div>
</div>

<div id="thatbai" class="overlay fixed inset-0 bg-black/30 backdrop-blur-sm flex items-center justify-center z-50 hidden form-noti">
    <div class="popup bg-white rounded-lg shadow-lg max-w-md w-full p-6 relative text-center">
        <a class="close absolute top-2 right-2 text-gray-400 hover:text-gray-600" href="#">
            <i class="icon icon-close text-2xl"></i>
        </a>
        <div class="content space-y-3">
            <img src="/assets/images/error.svg" class="mx-auto w-12 h-12" />
            <h4 class="text-red-600 font-bold text-lg">LỖI</h4>
            <p class="text-gray-600 text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
            <a href="#" class="btn btn-line inline-block px-4 py-2 border border-gray-300 rounded hover:bg-gray-100">Đóng</a>
        </div>
    </div>
</div>

