@using Best1Mall_Front_End.ViewModels;
@using Best1Mall_Front_End.Utilities;
@model ArticleViewModel

@{
    int d = 0;
    int category_id = Model.category_id;

    // Main article: pinned position = 1
    var mainArticles = Model.obj_article_pinned?.Where(x => x.position == 1).Take(1).ToList() ?? new List<CategoryArticleModel>();

    // Side pinned articles: position = 2 or 3
    var sidePinned = Model.obj_article_pinned?.Where(x => x.position == 2 || x.position == 3)
                      .OrderBy(x => x.position)
                      .ToList() ?? new List<CategoryArticleModel>();

    // All remaining articles list
    var remainingArticles = Model.obj_article_list ?? new List<CategoryArticleModel>();

    // Lấy 5 bài nối tiếp từ remainingArticles cho phần sideExtra
    var sideExtra = remainingArticles.Take(5).ToList();

    // Side articles = 2 bài pinned + 5 bài thường
    var sideArticles = sidePinned.Concat(sideExtra).ToList();

    // Loại bỏ 5 bài đã lấy cho sideExtra khỏi remainingArticles
    remainingArticles = remainingArticles.Skip(5).ToList();
}

<div class="mt-3">
    <div class="flex flex-col lg:flex-row gap-6">
        <!-- MAIN ARTICLE -->
        <div class="lg:w-2/3 w-full">
            @foreach (var item in mainArticles)
            {
                var link = Html.GetStaticUrlNews(item.title, item.id);
                <a href="@link">
                    <div class="aspect-[5/3] w-full">
                        <img src="@item.image_169" alt="@item.title"
                             class="w-full h-full object-cover md:rounded-3xl rounded-xl" />
                    </div>
                    <div class="mt-2">
                        <div class="text-sm text-gray-500 flex items-center gap-1 mb-1">
