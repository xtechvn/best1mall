@using Best1Mall_Front_End.ViewModels.Paginated
@model PaginationNewsViewModel

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="flex justify-center mt-8">
        <ul class="inline-flex items-center space-x-1 text-sm">
            <li>
                <button class="pagination-btn px-3 py-2 rounded-full border border-gray-300 text-gray-600 hover:bg-gray-100 transition"
                @(Model.CurrentPage == 1 ? "disabled" : "")
                        data-page="@(Model.CurrentPage - 1)">
                    Prev
                </button>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li>
                        <span class="px-3 py-2 rounded-full bg-blue-500 text-white font-semibold shadow">@i</span>
                    </li>
                }
                else
                {
                    <li>
                        <button class="pagination-btn px-3 py-2 rounded-full border border-gray-300 text-gray-700 hover:bg-gray-100 transition"
                                data-page="@i">
                            @i
                        </button>
                    </li>
                }
            }

            <li>
                <button class="pagination-btn px-3 py-2 rounded-full border border-gray-300 text-gray-600 hover:bg-gray-100 transition"
                @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")
                        data-page="@(Model.CurrentPage + 1)">
                    Next
                </button>
            </li>
        </ul>
    </nav>
}

