@using HuloToys_Front_End.Models;
@using HuloToys_Front_End.Utilities;
@model List<CategoryModel>
@{
    if (Model != null)
    {

        <ul class="list-cat flex flex-wrap gap-2 mt-3">
            <li class="active px-5 py-1 border border-blue-500 rounded-full inline-block bg-blue-500 text-white"> <a href="/" class="cat-tag">Tất cả</a></li>
                @foreach (var item in Model)
                {
                // <li> <a href="@(Html.GetStaticUrlCategory(item.name, item.id) )" class="cat-tag px-5 py-1 border border-gray-300 rounded-full inline-block">@item.name</a></li>
                <li>
                    <a href="javascript:void(0)" class="cat-tag px-5 py-1 border border-gray-300 rounded-full inline-block" data-id="@item.id">@item.name</a>
                </li>
                }
            </ul>
        
    }
}