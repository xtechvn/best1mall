@using HuloToys_Front_End.Models.Labels
@using HuloToys_Front_End.ViewModels;
@using HuloToys_Front_End.Utilities;
@model List<LabelListingModel>

<!-- List Thương hiệu được yêu thích -->
<div class="my-6 md:my-10">
    <div class="flex justify-between flex-wrap gap-2 mb-3">
        <h2 class="text-sky-900 font-medium uppercase"><a href="">Thương hiệu được yêu thích</a></h2>
        <a href="/san-pham" class="flex items-center gap-2 text-blue-500 text-sm">
            Xem thêm
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                <path d="..." fill="#098EF7" />
            </svg>
        </a>
    </div>

    <div class="h-[1px] w-full bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500"></div>

    @if (Model != null && Model.Any())
    {
        <div class="grid lg:grid-cols-6 md:grid-cols-4 grid-cols-2 gap-3 mt-3">
            @foreach (var label in Model)
            {
                <div class="flex-shrink-0 w-full text-center p-3 rounded-xl bg-white">
                    <a href="">
                        <div class="relative aspect-[1/1] overflow-hidden rounded-lg mb-2">
                            <img src="@label.Icon" alt="@label.LabelName"
                                 class="absolute inset-0 w-full h-full object-cover" />
                        </div>
                        <img src="@label.Icon" alt="@label.LabelName"
                             class="rounded-full border border-blue-100 w-2/3 h-10 object-contain bg-white mx-auto" />
                        <p class="font-medium text-red-400 mt-3">@label.LabelName</p>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center text-gray-500 italic mt-4">
            Không có thương hiệu nào được tìm thấy.
        </div>
    }
</div>
