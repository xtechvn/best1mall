@{
    ViewData["Title"] = "Đóng góp ý kiến";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .AddcommentSucces {
        padding: 15px;
        border: 1px solid transparent;
        border-radius: 4px;
        background-color: #f0ad4e;
        color: #fff;
    }

    .close {
        float: right;
        font-size: 21px;
        font-weight: bold;
        line-height: 1;
        color: #000;
        text-shadow: 0 1px 0 #fff;
        opacity: .5;
    }

/*     #CommentSucces {
        display: none;
        text-align: center;
        line-height: 30px; 
    } */

    #PromotionNoti
    {
        display: none;
        text-align: center;
        line-height: 30px;
    }

    .disabled {
        pointer-events: none;
        opacity: 0.5; /* Làm mờ liên kết */
    }

    .btn-Send {
        float:right;
    }
</style>
<div id="Comment_success" class="overlay form-noti" style="display:none;">
    <div class="popup p-4 md:p-8 bg-white rounded-xl md:rounded-3xl shadow-md max-w-4xl md:my-8 my-4 mx-auto">
        <a class="close" href="javascript:;">
            <i class="icon icon-close"></i>
        </a>
        <div class="content">
            <img src="/assets/images/check.svg" alt="">
            <h4>Thành công</h4>
            <p class="lightbox-description">Cảm ơn bạn vì đã góp ý</p>
        </div>
    </div>
</div>
<section class="section-banner-search section-donggopykien">
    <div class="container max-w-5xl mx-auto my-6 p-6 md:p-10 bg-white rounded-3xl shadow-md">
        <div class="flex flex-col md:flex-row gap-6 items-center">

            <!-- Form Góp Ý -->
            <div class="w-full md:w-3/5">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Đóng góp ý kiến</h2>
                <form onsubmit="return false" class="space-y-4">
                    <div>
                        <label for="comment-text" class="block text-sm font-medium text-gray-700 mb-2">Nội dung<span class="text-red-500">*</span></label>
                        <textarea id="comment-text"
                                  oninput="_feedback.SaveText()"
                                  maxlength="500"
                                  placeholder="Hãy chia sẻ những góp ý của bạn với BestMall tại đây nhé."
                                  class="w-full rounded-2xl border border-gray-300 p-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#773EFA] resize-none min-h-[150px]">
            </textarea>
                        <div id="invalid-comment" class="text-red-500 text-sm mt-1 hidden">Vui lòng nhập nội dung góp ý!</div>
                    </div>
                    <div class="flex justify-end">
                        <a onclick="_feedback.CreateFeedback()"
                           id="liveToastBtn"
                           class="bg-[#773EFA] text-white px-6 py-2 rounded-full hover:opacity-90 transition-all duration-200 cursor-pointer">
                            Gửi
                        </a>
                    </div>
                </form>
            </div>

            <!-- Hình minh hoạ -->
            <div class="w-full md:w-2/5">
                <img src="/assets/images/img-search.png"
                     alt="Elephant support"
                     class="max-w-full h-auto mx-auto md:mx-0" />
            </div>

        </div>
    </div>
</section>


