@{
    ViewData["Title"] = "Profile | Best mall";
    Layout = "~/Views/Shared/_AccountManagementLayout.cshtml";
}

<div class="box-info" id="profile">
    <form id="formProfile">
        <div class="form-group">
            <label>Họ và tên</label>
            <div class="box-input user">
                <input id="fullName" class="form-control" type="text" placeholder="Nhập họ tên" />
            </div>
        </div>
        <div class="form-group">
            <label>Địa chỉ Email</label>
            <div class="box-input email">
                <input id="email" class="form-control" type="text" placeholder="Nhập địa chỉ Email" />
            </div>
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <div class="box-input tel">
                <input id="phone" class="form-control" type="text" placeholder="Nhập số điện thoại" />
            </div>
        </div>
       
        <div class="flex justify-center text-center items-center mt-4 gap-3">
            @* <a href="javascript:;" class="border border-blue-500 px-6 py-2 text-blue-500 rounded-full w-full"> *@
            @*     Hủy bỏ *@
            @* </a> *@
            <a href="javascript:;" id="btnUpdate" class="border border-blue-500 bg-blue-500 px-6 py-2 text-white rounded-full w-full">
                Cập nhật
            </a>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript" src="/modules/profile.js" asp-append-version="true"></script>

}