<div id="update-address" class="overlay form-update-address popup fixed inset-0 bg-black/50 bg-opacity-50 hidden overflow-x-hidden z-999">
    <div class="flex justify-center md:items-center h-full">
        <div class="popup-content bg-white p-6 md:rounded-3xl shadow-lg max-w-3xl w-full mx-auto overflow-y-auto relative">

            <!-- Close -->
            <span class="closePopup absolute right-2 top-2 cursor-pointer btn-close">
                <!-- icon close -->
            </span>

            <!-- Title -->
            <h4 class="text-center text-xl text-color-base mb-3">Cập nhật Thông tin giao hàng</h4>

            <!-- Form -->
            <div class="space-y-4 mt-3 scroll-form">
                <!-- Họ tên -->
                <div class="form-group">
                    <label class="mb-1 block">Họ và tên</label>
                    <div class="relative box-input user">
                        <input type="text" placeholder="Nhập họ và tên"
                               class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full" />
                    </div>
                    <span class="err">Vui lòng không để trống Họ và tên</span>
                </div>

                <!-- Email -->
                @* <div class="form-group"> *@
                @*     <label class="mb-1 block">Địa chỉ Email</label> *@
                @*     <div class="relative box-input email"> *@
                @*         <input type="email" placeholder="Nhập địa chỉ email" *@
                @*                class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full" /> *@
                @*     </div> *@
                @*     <span class="err">Vui lòng không để trống</span> *@
                @* </div> *@

                <!-- Số điện thoại -->
                <div class="form-group">
                    <label class="mb-1 block">Số điện thoại</label>
                    <div class="relative box-input tel">
                        <input type="tel" placeholder="Số điện thoại"
                               class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full" />
                    </div>
                    <span class="err">Vui lòng không để trống Số điện thoại</span>
                </div>

                <!-- Tỉnh -->
                <div class="form-group">
                    <label class="mb-1 block">Tỉnh/Thành</label>
                    <div class="relative box-input province">
                        <select class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full">
                            <option>Đống đa</option>
                        </select>
                    </div>
                    <span class="err">Vui lòng không để trống Tỉnh/Thành</span>
                </div>

                <!-- Quận -->
                <div class="form-group">
                    <label class="mb-1 block">Quận/Huyện</label>
                    <div class="relative box-input district">
                        <select class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full">
                            <option>Đống đa</option>
                        </select>
                    </div>
                    <span class="err">Vui lòng không để trống Quận/Huyện</span>
                </div>

                <!-- Phường -->
                <div class="form-group">
                    <label class="mb-1 block">Phường/Xã</label>
                    <div class="relative box-input wards">
                        <select class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full">
                            <option>Đống đa</option>
                        </select>
                    </div>
                    <span class="err">Vui lòng không để trống Phường/Xã </span>
                </div>

                <!-- Địa chỉ -->
                <div class="form-group">
                    <label class="mb-1 block">Địa chỉ cụ thể</label>
                    <div class="relative box-input address">
                        <input type="text" placeholder="Nhập địa chỉ cụ thể"
                               class="form-control pl-10 w-full px-4 py-3 border border-gray-200 rounded-full" />
                    </div>
                    <span class="err">Vui lòng không để trống Địa Chỉ</span>
                </div>
                <!-- Địa chỉ mặc định-->
                <div class="flex mt-4 gap-3">
                    <input type="checkbox" id="IsActive" /> Chọn làm địa chỉ mặc định
                </div>
            </div>

            <!-- Action -->
            <div class="flex justify-between items-center mt-4 gap-3 action">
                <button class="border border-blue-500 px-6 py-2 text-blue-500 rounded-full cursor-pointer hover:opacity-80 w-full btn-back btn-close">
                    Trở lại
                </button>
                <button class="border border-blue-500 bg-blue-500 px-1 py-2 text-white rounded-full cursor-pointer hover:opacity-80 w-full btn-save">
                    Cập nhật địa chỉ
                </button>
            </div>

        </div>
    </div>
</div>
<style>
    .err {
        color: red;
        font-size: 0.875rem;
        display: none;
    }

</style>