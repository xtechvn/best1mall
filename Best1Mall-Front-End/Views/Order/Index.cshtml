@{
    ViewData["Title"] = "Lịch sử đơn hàng | Hulotoys";
    Layout = "~/Views/Shared/_AccountManagementLayout.cshtml";
}
<div class="box-order">
    <div class="tab-status">
        <ul class="list-tab">
            <li class="active">
                <a href="javascript:;" class="order-tab" data-id="-1">Tất cả<nw class="tab-count">(0)</nw></a>
            </li>
            <li>
                <a href="javascript:;" class="order-tab" data-id="0">Chờ thanh toán<nw class="tab-count">(0)</nw></a>
            </li>
            <li>
                <a href="javascript:;" class="order-tab" data-id="1,2">Đang giao<nw class="tab-count">(0)</nw></a>
            </li>
            <li>
                <a href="javascript:;" class="order-tab" data-id="3">Hoàn thành<nw class="tab-count">(0)</nw></a>
            </li>
            <li>
                <a href="javascript:;" class="order-tab" data-id="4">Đã hủy<nw class="tab-count">(0)</nw></a>
            </li>
        </ul>
    </div>
    <div class="box-filler">
        <form>
            <div class="form-search">
                <input type="text" placeholder="Từ khoá, mã sản phẩm,...">
                <button type="button" class="btn-search"><i class="icon icon-search"></i></button>
            </div>
            <div class="form-datetime">
                <label>Ngày</label>
                <div class="input-datetime">
                    <input type="text" id="datepicker" placeholder="Ngày / tháng / năm" class="hasDatepicker">
                </div>
            </div>
        </form>
    </div>
    <nw id="order-history">
        <div class="box-order-detail">
            <div class="head-box">
                <span class="code">Mã đơn hàng: <b>NG7668779</b></span>
                <span class="status">Tình trạng: <span class="high">Trả hàng/Hoàn tiền</span></span>
                <span class="code">Ngày đặt hàng: <b>09:00 23/1/2024</b></span>
                <a href="" class="btn-seemore">Xem chi tiết</a>
            </div>
            <div class="list-product-order">
                <div class="item">
                    <div class="img">
                        <img src="/assets/images/product.jpg" alt="">
                    </div>
                    <div class="info">
                        <h3 class="name-product">
                            Gấu Bông Mèo Hoàng Thượng Cosplay, Thú Nhồi Bông An Toàn
                            Cho Bé
                        </h3>
                        <div class="cat">Phân loại hàng: Gấu Trúc, 40cm</div>
                        <div class="flex-quantity">
                            <span>Giá: 899.000đ</span>
                            <span>Số lượng:1</span>
                        </div>
                        <p class="price">890.000đ</p>
                    </div>
                </div>
                <div class="item">
                    <div class="img">
                        <img src="/assets/images/product.jpg" alt="">
                    </div>
                    <div class="info">
                        <h3 class="name-product">
                            Gấu Bông Mèo Hoàng Thượng Cosplay, Thú Nhồi Bông An Toàn
                            Cho Bé
                        </h3>
                        <div class="cat">Phân loại hàng: Gấu Trúc, 40cm</div>
                        <div class="flex-quantity">
                            <span>Giá: 899.000đ</span>
                            <span>Số lượng:1</span>
                        </div>
                        <p class="price">890.000đ</p>
                    </div>
                </div>
            </div>
            <div class="bottom-box">
                <div class="action">
                    <a href="" class="btn btn-base">Đã nhận được hàng</a>
                    <a href="" class="btn btn-line">Hủy đơn hàng</a>
                </div>
                <div class="total-price">Tổng tiền: <span class="number-price">900.000 đ</span> </div>
            </div>
        </div>
    </nw>
</div>
@section Scripts {
    <script type="text/javascript" src="/modules/order_history.js" asp-append-version="true"></script>

}